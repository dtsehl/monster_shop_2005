<h1>Create New Item For <%= @merchant.name %></h1>

<center>
  <%= form_for @item, url: "/merchant/items" do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.label :inventory %>
    <%= f.number_field :inventory %>

    <%= f.submit %>
  <% end %>
</center>
