<h1>Merchant Name: <%= @merchant.name %></h1>
<h3>Merchant Address: <%= @merchant.address %>,
  <br> <%= @merchant.city %>, <%= @merchant.state %>, <%= @merchant.zip %>
</h3>

<section>
  <% @pending_orders.each do |order| %>
    <ul id="merchant-orders-<%=order.id%>">
      <li><%= link_to order.id, "/merchant/orders/#{order.id}" %></li>
      <li>Created On: <%= order.created_at %></li>
      <li>Total Quantity of <%= order.name %> Items in Order: <%= order.total_merchant_quantity(order.id, @merchant.id)%></li>
      <li>Total Value of <%= order.name %> Items in Order: <%= order.total_merchant_value(order.id, @merchant.id) %></li>
  <% end  %>
</section>

